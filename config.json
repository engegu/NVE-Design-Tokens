{
  "source": ["dsdev/src/nveDesignSystem/tokens/configFiles/**/*.json"],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "files": [
        {
          "destination": "dsdev/src/nveDesignSystem/tokens/_variables.scss",
          "format": "scss/variables"
        }
      ]
    },
    "css": {
      "transformGroup": "css",
      "files": [
        {
          "destination": "dsdev/src/nveDesignSystem/tokens/variables.css",
          "format": "css/variables"
        }
      ]
    }
  }
}
